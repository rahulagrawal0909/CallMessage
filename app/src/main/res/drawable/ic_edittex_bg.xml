<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Shadow Layer -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#E0E0E0" /> <!-- Light gray for shadow -->
      <corners android:radius="8dp" />
    </shape>
  </item>

  <!-- Rectangle with Stroke -->
  <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
    <shape android:shape="rectangle">
      <solid android:color="@android:color/white" /> <!-- Rectangle background -->
      <corners android:radius="8dp" />
      <stroke
          android:width="2dp"
          android:color="@android:color/black" /> <!-- Black stroke -->
    </shape>
  </item>

</layer-list>